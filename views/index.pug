block templates
	script#sliderItems(type="text/x-handlebars-template")
		| {{#if rising}}
		div.exchange-brief.exchange-brief--rising
			div.exchange-brief__info
				h6.exchange-brief__target {{symbolCN}}
				div.exchange-brief__compare
					span.exchange-brief__name BID
					span.exchange-brief__number {{bid}}
				div.exchange-brief__compare
					span.exchange-brief__name ASK
					span.exchange-brief__number {{ask}}
				div.exchange-brief__summary
					span.exchange-brief__percentage
						| {{percentage}}
						+icon('up-rate', 'green')
					span.exchange-brief__chart
						+icon('sparkline-up')
						| {{^}}
		div.exchange-brief.exchange-brief--fall
			div.exchange-brief__info
				h6.exchange-brief__target {{symbolCN}}
				div.exchange-brief__compare
					span.exchange-brief__name BID
					span.exchange-brief__number {{bid}}
				div.exchange-brief__compare
					span.exchange-brief__name ASK
					span.exchange-brief__number {{ask}}
				div.exchange-brief__summary
					span.exchange-brief__percentage
						| {{percentage}}
						+icon('down-rate', 'red')
					span.exchange-brief__chart
						+icon('sparkline-down')
						| {{/if}}
	script#exchangeToolsPopover(type="text/x-handlebars-template")
		div.exchange-tools__popover
			div.exchange-tools__popover-title {{from}} - {{to}}
			// status up or down
			| {{#if rising}}
			div.exchange-tools__brief(data-status="up")
				+icon('rate-up')
				div.exchange-tools__current {{current}}
				div.exchange-tools__brief-ratio
					div {{rate}}
					div {{percentage}}
				div.clearfix
			| {{^}}
			div.exchange-tools__brief(data-status="down")
				+icon('rate-down')
				div.exchange-tools__current {{current}}
				div.exchange-tools__brief-ratio
					div {{rate}}
					div {{percentage}}
				div.clearfix
			| {{/if}}	
			div.exchange-tools__time {{date}}
	