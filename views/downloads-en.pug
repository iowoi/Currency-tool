extends layout-en

include helpers/mixins
include helpers/mixins-en

mixin downloadItem(name, location, size, link)
	div.downloads__item
		div.downloads__name #{name}
		div.downloads__info
			div.downloads__location(data-location=location) #{location}
			div.downloads__size PDF #{size} MB
		a.downloads__link(href=link title="download" target="_blank")
			span Resources Download
			+icon('download', 'blue')

block content
	- var imgPath = isDev ? 'img' : './assets/img'
	+banner(`${imgPath}/banner/downloads.jpg`, 'Resources Download')
	+pageIntro
		p.description You will find our commonly used forms and other information in PDF format. Please note you may need to have PDF reader in order to access those files.
	section.section.section--gray-dark.section--no-top-spacing.downloads
		div.downloads__tabs.hidden-xs
			div.container
				div.downloads__tabs-content
					div.downloads__tab.active(data-target="Global Payment") Global Payment
					div.downloads__tab(data-target=" Corporate FX Management")  Corporate FX Management
					div.downloads__tab(data-target="Cross-Border e-Commerce Solution") Cross-Border e-Commerce Solution
					div.downloads__tab(data-target="Fin-tech Solution") Fin-tech Solution
					div.downloads__tab(data-target="Global Wealth Management") Global Wealth Management
					div.downloads__tab(data-target="Fund, Insurance and Physical Gold") Fund, Insurance and Physical Gold
		div.dropdown.mobile-tabs.visible-xs
			button#mobileTabs.btn.btn-block.dropdown-toggle.simple(data-toggle="dropdown" aria-haspopup="true" aria-expanded="true")
				span.contact-form__selected Global Payment
				span.caret: +icon('down', 'gray-darker')
			ul.dropdown-menu(aria-labelledby="mobileTabs")
				li: a(data-target="Global Payment") Global Payment
				li: a(data-target=" Corporate FX Management")  Corporate FX Management
				li: a(data-target="Cross-Border e-Commerce Solution") Cross-Border e-Commerce Solution
				li: a(data-target="Fin-tech Solution") Fin-tech Solution
				li: a(data-target="Global Wealth Management") Global Wealth Management
				li: a(data-target="Fund, Insurance and Physical Gold") Fund, Insurance and Physical Gold
		div.container
			div.row.downloads__content.mobile-dropdown__content(data-target="国際決済")
				div.col-md-offset-1.col-md-10
					div.total-result Total
						strong 8
						| files
					div.dropdown.downloads__filter
						button#downloadFilter.btn.btn-block.dropdown-toggle.simple(data-toggle="dropdown" aria-haspopup="true" aria-expanded="true")
							span.contact-form__selected Country or Region
							span.caret: +icon('down', 'gray-darker')
						ul.dropdown-menu(aria-labelledby="downloadFilter")
							li: a Australia
							li: a New Zealand
							li: a Canada
							li: a All
					div.clearfix
					div.downloads__list
						+downloadItem('KVB Global Markets Pty Bank Account Information', 'Australia', 3.16, 'https://www.kvbgc.com//assets/DownloadFiles/AccountDetail-EN-AU.pdf')
						+downloadItem('KVB Global Markets Pty PDS and FSG', 'Australia', 3.16, 'https://www.kvbgc.com//assets/Uploads/GCC233-KVB-Global-Markets-Pty-Ltd-PDS-Oct-2016.pdf')
						+downloadItem('KVB Global Markets Ltd PDS', 'New Zealand', 3.16, 'https://www.kvbgc.com//assets/Uploads/NZ-AccountDetails2017v4.pdf')
						+downloadItem('KVB Global Markets Ltd Bank Account Information', 'New Zealand', 3.16, 'https://www.kvbgc.com/assets/Uploads/GCC232-KVB-Global-Markets-Ltd-PDS-Oct-2016.pdf')
						+downloadItem('KVB Kunlun Canada Inc. Bank Account Information', 'Canada', 3.16, 'https://www.kvbgc.com//assets/DownloadFiles/AccountDetail-EN-CA.pdf')
						+downloadItem(' KVB Kunlun Canada Inc. Commercial Account Opening Form', 'Canada', 3.16, 'https://www.kvbgc.com/assets/Uploads/CommercialAccountApplicationCA-EN.pdf')
						+downloadItem(' KVB Kunlun Canada Inc. Individual Account Opening – English/Chinese', 'Canada', 3.16 ,'https://www.kvbgc.com/assets/Uploads/AC-OPENING-APPLICATION-FORM-INDIVIDUAL-JOINTChinese-revised-2014.pdf')
						+downloadItem('Canada: KVB Kunlun Canada Inc. Individual Account Opening - Japanese', 'Canada', 3.16, '/assets/Uploads/AC-OPENING-APPLICATION-FORM-INDIVIDUAL-JOINTJapanese-revised-2014.pdf')
					//+pagination(3)
			div.row.downloads__content.mobile-dropdown__content(data-target="法人為替取引" style='display: none')
				div.col-md-offset-1.col-md-10
					div.total-result Total
						strong 0
						| files
					div.dropdown.downloads__location-filter
						button#downloadFilter.btn.btn-block.dropdown-toggle.simple(data-toggle="dropdown" aria-haspopup="true" aria-expanded="true")
							span.contact-form__selected Country or Region
							span.caret: +icon('down', 'gray-darker')
						ul.dropdown-menu(aria-labelledby="downloadFilter")
							li: a Australia
							li: a New Zealand
							li: a Canada
							li: a All
					div.clearfix
					div.downloads__list
						//+downloadItem('KVB Global Markets Ltd Bank Account Information', 'Australia', 3.16)
						//+downloadItem('KVB Global Markets Ltd Product Disclosure Statement and Financial Services Guide', 'Australia', 3.16)
			div.row.downloads__content.mobile-dropdown__content(data-target="Cross-Border e-Commerce Solution" style='display: none')
				div.col-md-offset-1.col-md-10
					div.downloads__empty
						+icon('file-empty', 'gray-darker')
						span No document available
			div.row.downloads__content.mobile-dropdown__content(data-target="Fin-tech Solution" style='display: none')
				div.col-md-offset-1.col-md-10
					div.downloads__empty
						+icon('file-empty', 'gray-darker')
						span No document available
			div.row.downloads__content.mobile-dropdown__content(data-target="Global Wealth Management" style='display: none')
				div.col-md-offset-1.col-md-10
					div.downloads__empty
						+icon('file-empty', 'gray-darker')
						span No document available
			div.row.downloads__content.mobile-dropdown__content(data-target="Fund, Insurance and Physical Gold" style='display: none')
				div.col-md-offset-1.col-md-10
					div.downloads__empty
						+icon('file-empty', 'gray-darker')
						span No document available
	+contactArea--en
