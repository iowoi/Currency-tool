block content
	+banner(`${imgPath}/comprehensive/wealth-management-herobanner.jpg`, 'Some of Our Previous Portfolios')
	section.section.section--gray.section--no-bottom-spacing.comprehensive__section
		+styledHeading('Comprehensive Wealth Management Product and Services', true)
		div.container.hidden-xs
			div.comprehensive-tabs.row
				div.col-sm-3
					button.tab.active(data-category="fixed-investment") Fixed Income Fund
				div.col-sm-3
					button.tab(data-category="longtern-investment") Medium and long-term structured investment products
				div.col-sm-3
					button.tab(data-category="ipo") Overseas Primary Market IPO Subscription Service
				div.col-sm-3
					button.tab(data-category="siv") SIV Investment Immigration
		div.dropdown.mobile-tabs.mobile-tabs--white.visible-xs
			button#mobileTabs.btn.btn-block.dropdown-toggle.simple(data-toggle="dropdown" aria-haspopup="true" aria-expanded="true")
				span.contact-form__selected Fixed Income Fund
				span.caret: +icon('down', 'gray-darker')
			ul.dropdown-menu(aria-labelledby="mobileTabs")
				li: a(data-target="fixed-investment") Fixed Income Fund
				li: a(data-target="longtern-investment") Medium and long-term structured investment products
				li: a(data-target="ipo") Overseas Primary Market IPO Subscription Service
				li: a(data-target="siv") SIV Investment Immigration
	+fixedInvestment
	+longternInvestment
	+ipo
	+siv
	+contactArea--en
