							div.fixed-investment__right-panel
								h2.comprehensive-intro__heading Investment from various dimensions
								h3.comprehensive-intro__subheading As for bond portfolio
								div.row.fixed-investment__portfolio
									div.col-xs-6
										div.fixed-investment__portfolio-block
											+icon('tick', 'blue')
											span.fixed-investment__portfolio-type Types of bonds
									div.col-xs-6
										div.fixed-investment__portfolio-block
											+icon('tick', 'blue')
											span.fixed-investment__portfolio-type Categories of currency
									div.col-xs-6
										div.fixed-investment__portfolio-block
											+icon('tick', 'blue')
											span.fixed-investment__portfolio-type Different industries
									div.col-xs-6
										div.fixed-investment__portfolio-block
											+icon('tick', 'blue')
											span.fixed-investment__portfolio-type Expiry dates
